<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.benfuhrman.meleestats.CounterpickActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CPoppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="25sp"
            android:textColor="#ec7063"
            android:textStyle="bold"
            android:text="Opponent:" />

        <EditText
            android:id="@+id/counterpickOppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:background="#ec7063" />

        <TextView
            android:id="@+id/CPoppChar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="25sp"
            android:textColor="#ec7063"
            android:textStyle="bold"
            android:text="Opponent's Character:" />

        <Spinner
            android:id="@+id/CPoppCharSpinner"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#ec7063"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CPblank1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CPblank2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CPblank3"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CPblank4"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/CPok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="counterpickOpponent"
            android:layout_gravity="center"
            android:text="Ok" />

    </LinearLayout>
</RelativeLayout>
