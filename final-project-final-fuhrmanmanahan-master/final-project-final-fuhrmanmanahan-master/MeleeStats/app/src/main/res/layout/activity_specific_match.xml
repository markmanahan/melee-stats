<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.benfuhrman.meleestats.SpecificMatchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:id="@+id/match_info_locName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ERR - locName"
            android:textAlignment="center"
            android:textColor="#ec7063"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/match_info_coords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ERR - cord"
            android:textAlignment="center"
            android:textColor="#ec7063"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/match_info_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ERR - date"
            android:textAlignment="center"
            android:textColor="#ec7063"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/match_info_opponent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ERR - opp"
            android:textAlignment="center"
            android:textColor="#ec7063"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/specific_person_image_view"
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_person_icon" />

        <TextView
            android:id="@+id/match_info_isTournament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ERR - trny"
            android:textAlignment="center"
            android:textColor="#ec7063"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_info_mapChar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ERR - mapChar"
                android:textAlignment="viewStart"
                android:textColor="#ec7063"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/match_info_outcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ERR - win"
                android:textAlignment="viewEnd"
                android:textColor="#ec7063"
                android:textSize="20dp" />

        </LinearLayout>

        <Button
            android:id="@+id/deleteEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="deleteEntry"
            android:text="Delete" />

    </LinearLayout>

</RelativeLayout>
